{
    "name": "tester",
    "plugins": [
        "javascript",
        "react-intl"
    ],
    "locales": [
        "en-US",
        "de-DE",
        "ja-JP",
        "ko-KR"
    ],
    "rules": [
        {
            "type": "source-checker",
            "name": "source-no-normalize",
            "severity": "warning",
            "description": "Ensure that the normalize function is not called.",
            "note": "Do not call the normalize function, as it is deprecated.",
            "regexps": [ "\\.normalize\\s*\\(" ]
        }
    ],
    "rulesets": {
        "javascript-rules": {
            "source-no-normalize": true
        }
    },
    "filetypes": {
        "javascript": {
            "ruleset": [
                "javascript-rules"
            ]
        }
    },
    "paths": {
        "src/**/*.json": {
            "locales": [
                "en-US",
                "de-DE",
                "ja-JP"
            ],
            "rules": {
            }
        },
        "**/*.xliff": {
            "rules": {
                "resource-icu-plurals": true,
                "resource-quote-style": true,
                "resource-url-match": true,
                "resource-named-params": "localeOnly"
            }
        },
        "test/testfiles/**/*.js": "javascript"
    }
}
